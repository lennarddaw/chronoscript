// Initialzustand setzen
set status = "booting";
set mood = "neutral";

// Hauptloop: jede Minute prÃ¼fen, was los ist
loop every 60s if true {
    log("Heartbeat: System running...");
    exec("print('Status:', status)");       // statt notify( ... + status )
    wait(2s);
    exec("print('>>> Python eval: status =', status)");
}

// Zustand Ã¤ndern je nach Zeit
loop every 10s if hour_between(6, 9) {
    set mood = "sleepy";
    log("Good morning. Mood is sleepy.");
}

loop every 10s if hour_between(10, 17) {
    set mood = "productive";
    log("Work hours detected. Mood is productive.");
}

loop every 10s if hour_between(18, 22) {
    set mood = "relaxed";
    log("Evening. Mood is relaxed.");
}

// Dynamische Reaktion auf Stimmung
loop every 15s if mood == "relaxed" {
    notify("Time to unwind âœ¨");
}

loop every 15s if mood == "productive" {
    log("Stay focused!");
    wait(1s);
    log("Keep up the good work.");
}

loop every 30s if random_chance(0.2) {
    notify("ðŸ’¡ Inspiration moment triggered!");
}
